- if user_signed_in?
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      = image_tag 'http://graph.facebook.com/910159965669580/picture', size: '20x20', class: 'pull-left', id: 'profile_image'
      = current_user.first_name
      %span.caret
    %ul.dropdown-menu{role: "menu"}
      %li
        = link_to sign_out_path, method: :delete do
          %i.fa.fa-sign-out
          Sign Out
- else
  %li
    %a{href: '/auth/facebook'}
      %i.fa.fa-facebook.fa-lg
      Log in with Facebook
