.row
  .col-xs-12= render 'movie_filters_nav'

.row
  - @movies.to_enum.with_index(1).each do |movie, i|
    .col-xs-6.col-sm-4.col-md-3.col-lg-2
      = link_to movie_path(movie.id), class: 'thumbnail' do
        = image_tag movie.poster_url, alt: movie.title
    = responsive_columns_fix(i, xs: 2, sm: 3, md: 4, lg: 6)
