%p= render 'info_badges', movie: movie

- if movie.genres.present?
  %p.text-muted= movie.genres.map(&:name).join(' | ')

%p.text-justify= movie.overview
- if movie.belongs_to_collection
  %p.text-muted= movie.belongs_to_collection.name

.row
  .col-md-6
    %h2 Cast

    .table-responsive
      %table.table.table-striped.table-condensed
        %tbody
          - movie.credits.cast[0...5].each do |cast|
            %tr
              %td= cast.character
              %td= link_to cast.name, person_path(cast.id)

  .col-md-6
    %h2 Crew

    .table-responsive
      %table.table.table-striped.table-condensed
        %tbody
          - movie.credits.crew[0...5].each do |member|
            %tr
              %td= member.job
              %td= member.name
