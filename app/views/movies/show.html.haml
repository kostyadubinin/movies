.row
  .col-xs-12
    %h1.page-header
      = @movie.title

.row
  .col-sm-3.hidden-xs
    = image_tag poster_url(@movie), class: 'img-responsive center-block'

    - if @movie.tagline.present?
      %p.text-center
        %small.text-muted= @movie.tagline

  .col-sm-9
    %p= render 'info_budges'

    - if @movie.belongs_to_collection
      %p.text-muted= @movie.belongs_to_collection.name

    %p.text-justify= @movie.overview

    - if @movie.homepage.present?
      %p= link_to 'Official Homepage', @movie.homepage, target: '_blank'

  .col-xs-12
    %hr

.row
  - @movie.trailers.youtube[0...2].each do |trailer|
    .col-xs-12.col-sm-6
      .embed-responsive.embed-responsive-16by9
        %iframe.embed-responsive-item{src: youtube_url(trailer.source), allowfullscreen: true}
